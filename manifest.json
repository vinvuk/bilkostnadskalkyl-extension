{
  "manifest_version": 3,
  "name": "Bilkostnadskalkyl",
  "version": "1.3.0",
  "description": "Se total agandekostnad direkt pa bilannonserna",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.blocket.se/*",
    "https://blocket.se/*",
    "https://www.wayke.se/*",
    "https://wayke.se/*",
    "https://www.carla.se/*",
    "https://carla.se/*",
    "https://dinbilkostnad.se/*"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
    },
    "default_title": "Bilkostnadskalkyl",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.carla.se/*",
        "https://carla.se/*",
        "https://www.wayke.se/*",
        "https://wayke.se/*",
        "https://www.blocket.se/*",
        "https://blocket.se/*"
      ],
      "js": ["content/index.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay/overlay.css", "assets/*", "panel/panel.js", "panel/panel.css", "*.js"],
      "matches": [
        "https://www.blocket.se/*",
        "https://blocket.se/*",
        "https://www.wayke.se/*",
        "https://wayke.se/*",
        "https://www.carla.se/*",
        "https://carla.se/*"
      ]
    }
  ]
}
